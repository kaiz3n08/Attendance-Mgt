generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model TeachersTab {
  id         Int            @id @default(autoincrement())
  name       String
  email      String         @unique
  password   String
  ClassRoom  String         @unique
  studentTab StudentTable[]
}

model StudentTable {
  id            Int               @id @default(autoincrement())
  rollNo        Int               @unique
  division      String
  Div           TeachersTab       @relation(references: [ClassRoom], fields: [division])
  StudentName   String
  attendance    AttendanceSheet[]
  studentlogins studentlogin[]
}

model AttendanceSheet {
  id         Int          @id @default(autoincrement())
  rollNo     Int
  rollno     StudentTable @relation(fields: [rollNo], references: [rollNo])
  Present    Boolean      @default(false)
  TimeNdDate DateTime     @unique @default(now()) @db.Timestamptz(6)
}

model studentlogin {
  id       Int          @id @default(autoincrement())
  rollNo   Int
  stud     StudentTable @relation(references: [rollNo], fields: [rollNo])
  email    String       @unique
  password String
}
